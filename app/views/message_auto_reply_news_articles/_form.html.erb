<div class="row-fluid">
    <div class="span12">
      <%= form_for(@message_auto_reply_news_article) do |f| %>
        <fieldset>
           <legend>文章</legend>
           <label>标题:</label><%= f.text_field :title %>
           <label>描述:</label><%= f.text_field :description %>
           <label>图片:</label><%= f.file_field :pic_url %>
           <label>链接:</label><%= f.text_field :url %>
           <label>图文:</label><%= f.collection_select  :message_auto_reply_news_id, MessageAutoReplyNews.all, :id, :content%>
           <%= f.submit :class => "btn", :value => "保存" %>

        </fieldset>
      <% end %>
    </div>
</div>